// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  pledges       Pledge[]
  sessions      Session[]
  accounts      Account[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Pledge {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Pledge details
  pledgeType      String   // "percentage" or "fixed"
  percentageAmount Float?  // 1-100 for percentage pledges
  fixedAmount     Float?   // dollar amount for fixed pledges
  frequency       String   // "quarterly", "monthly", "yearly"
  
  // Fund allocation (percentages must add to 100)
  musicFund       Float    @default(0)
  filmFund        Float    @default(0)
  techFund        Float    @default(0)
  
  // Status
  status          String   // "active", "paused", "cancelled"
  nextPaymentDate DateTime?
  
  // Metadata
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  transactions    Transaction[]
}

model Transaction {
  id              String   @id @default(cuid())
  pledgeId        String
  pledge          Pledge   @relation(fields: [pledgeId], references: [id], onDelete: Cascade)
  
  amount          Float
  paypalOrderId   String?
  paypalCaptureId String?
  status          String   // "pending", "completed", "failed", "refunded"
  
  // Fund breakdown
  musicAmount     Float    @default(0)
  filmAmount      Float    @default(0)
  techAmount      Float    @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Grant {
  id              String   @id @default(cuid())
  
  // Applicant info
  applicantName   String
  applicantEmail  String
  projectTitle    String
  projectDescription String
  fundType        String   // "music", "film", "tech"
  grantType       String   // "micro" or "project"
  amountRequested Float
  
  // Application details
  portfolioLinks  String?
  budgetBreakdown String?
  
  // Review status
  status          String   // "pending", "under_review", "approved", "rejected", "paid"
  reviewNotes     String?
  approvedAmount  Float?
  
  // Payment info
  paymentMethod   String?
  paymentDate     DateTime?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
